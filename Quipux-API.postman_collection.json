      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('jwt_token', jsonData.token);",
                  "    console.log('JWT Token saved:', jsonData.token.substring(0, 20) + '...');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/login?username=admin",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"],
              "query": [
                {
                  "key": "username",
                  "value": "admin",
                  "type": "text"
                }
              ]
            },
            "description": "Login with any username to get a JWT token. The token will be automatically saved to the jwt_token environment variable."
          },
          "response": [
            {
              "name": "Login Success",
              "originalRequest": {
                "method": "POST",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/auth/login?username=admin",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "login"],
                  "query": [
                    {
                      "key": "username",
                      "value": "admin",
                      "type": "text"
                    }
                  ]
                }
              },
              "status": "OK",
              "code": 200,
